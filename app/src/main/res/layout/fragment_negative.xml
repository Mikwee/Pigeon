<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorNegative"
    tools:context="com.mikwee.timebrowser.activities.MainActivity">

    <!--title-->
    <TextView
        android:id="@+id/negative_title"
        android:layout_width="368dp"
        android:layout_height="wrap_content"

        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"

        android:text="@string/negative_title"
        android:textAlignment="center"
        android:textSize="@dimen/activity_title"


        app:layout_constraintBottom_toTopOf="@+id/negative_subtitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <!--subtitle-->
    <TextView
        android:id="@+id/negative_subtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"

        android:layout_marginRight="8dp"
        android:fontFamily="sans-serif-thin"
        android:text="@string/negative_subtitle"

        android:textAlignment="center"
        android:textSize="@dimen/activity_subtitle"


        app:layout_constraintBottom_toTopOf="@+id/negative_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/negative_title"/>

    <!--sad icon-->
    <ImageView
        android:id="@+id/negative_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/negative"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />


</android.support.constraint.ConstraintLayout>